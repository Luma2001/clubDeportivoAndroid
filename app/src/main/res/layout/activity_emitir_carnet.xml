<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".EmitirCarnetActivity"
    android:background="@color/bdApp">

    <ImageButton
        android:id="@+id/btnVolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@null"
        android:contentDescription="@string/botonVolver"
        android:padding="15dp"
        android:src="@drawable/ic_chevron_left" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="76dp"
        android:layout_height="76dp"
        app:srcCompat="@drawable/logo2"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="@string/TituloEmitir"
        android:textSize="32dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <!-- Input Verficar DNI -->
    <TextView
        android:id="@+id/textViewVerDNI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity=""
        android:paddingStart="50dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:text="@string/labelDNI"
        android:textSize="18dp"
        android:textColor="@color/black"/>
    <EditText
        android:id="@+id/editTextVerDNI"
        android:layout_width="310dp"
        android:layout_height="51dp"
        android:inputType="textPersonName"
        android:hint="@string/textVerificarDNI"
        android:layout_gravity="center"
        android:background="@drawable/borde_radius"
        android:layout_marginBottom="36dp"
        android:paddingStart="10dp" />


    <Button
        android:id="@+id/btnVerificar"
        app:backgroundTint="@null"
        android:layout_width="310dp"
        android:layout_height="60dp"
        android:background="@drawable/verde"
        android:text="@string/textVerificar"
        android:textSize="24dp"
        android:layout_gravity="center"
        android:layout_marginBottom="31dp"
        />


    <TextView
        android:id="@+id/textViewSubtDatos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:text="@string/subtDatosPersonales"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="160dp"
        android:background="@color/white"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginBottom="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/datoDNI"
            android:paddingStart="20dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/datoApellido"
            android:paddingStart="20dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/datoNombre"
            android:paddingStart="20dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btnEmitir"
        app:backgroundTint="@null"
        android:layout_width="310dp"
        android:layout_height="60dp"
        android:background="@drawable/verde"
        android:text="@string/textEmitir"
        android:textSize="24dp"
        android:layout_gravity="center"
        android:layout_marginBottom="31dp"
        />

    <!--LogoGrupo-->
    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginStart="160dp"
        app:srcCompat="@drawable/logo_grupo" />


</LinearLayout>